---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Blog" description="Meine Gedanken und Artikel">
  <!-- Header Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-rose-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 w-64 h-64 bg-primary-500/10 rounded-full blur-3xl"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-rose-500/10 border border-rose-500/20 mb-6 opacity-0 animate-fade-in-up">
          <svg class="w-4 h-4 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <span class="text-rose-400 text-sm font-medium">Artikel & Gedanken</span>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold mb-6 opacity-0 animate-fade-in-up animation-delay-100">
          Mein <span class="text-gradient">Blog</span>
        </h1>
        <p class="text-xl text-white/60 opacity-0 animate-fade-in-up animation-delay-200">
          Gedanken, Erfahrungen und Learnings aus meiner Arbeit als Entwickler
          und allem, was mich sonst noch beschäftigt.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-6">
      {sortedPosts.length > 0 ? (
        <div class="space-y-6">
          {sortedPosts.map((post, index) => (
            <article class={`opacity-0 animate-fade-in-up animation-delay-${(index % 4 + 1) * 100}`}>
              <a href={`/blog/${post.slug}`} class="block group">
                <div class="glass-card p-8 hover-lift relative overflow-hidden">
                  <!-- Gradient accent on hover -->
                  <div class="absolute inset-0 bg-gradient-to-r from-rose-500/5 to-primary-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                  <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-rose-500 to-primary-500 rounded-l-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>

                  <div class="relative">
                    <div class="flex flex-wrap gap-4 items-center mb-4">
                      <time class="text-sm text-white/40">
                        {new Date(post.data.date).toLocaleDateString('de-DE', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                      {post.data.tags && (
                        <div class="flex gap-2">
                          {post.data.tags.slice(0, 2).map((tag: string) => (
                            <span class="px-2 py-1 rounded-md bg-white/5 text-white/50 text-xs">
                              {tag}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>

                    <h2 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">
                      {post.data.title}
                    </h2>

                    <p class="text-white/50 leading-relaxed mb-4">
                      {post.data.description}
                    </p>

                    <span class="inline-flex items-center gap-2 text-primary text-sm font-medium group-hover:gap-3 transition-all">
                      Weiterlesen
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="space-y-6">
          <!-- Sample Post 1 -->
          <article class="opacity-0 animate-fade-in-up animation-delay-100">
            <a href="#" class="block group">
              <div class="glass-card p-8 hover-lift relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-rose-500/5 to-primary-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-rose-500 to-primary-500 rounded-l-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="relative">
                  <div class="flex flex-wrap gap-4 items-center mb-4">
                    <time class="text-sm text-white/40">Dezember 2024</time>
                    <div class="flex gap-2">
                      <span class="px-2 py-1 rounded-md bg-white/5 text-white/50 text-xs">Development</span>
                      <span class="px-2 py-1 rounded-md bg-white/5 text-white/50 text-xs">Astro</span>
                    </div>
                  </div>

                  <h2 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">
                    Warum ich meine Website mit Astro gebaut habe
                  </h2>

                  <p class="text-white/50 leading-relaxed mb-4">
                    Eine kurze Übersicht, warum Astro die perfekte Wahl für meine persönliche Website ist
                    und wie ich den Entwicklungsprozess angegangen bin.
                  </p>

                  <span class="inline-flex items-center gap-2 text-primary text-sm font-medium group-hover:gap-3 transition-all">
                    Weiterlesen
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          </article>

          <!-- Sample Post 2 -->
          <article class="opacity-0 animate-fade-in-up animation-delay-200">
            <a href="#" class="block group">
              <div class="glass-card p-8 hover-lift relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-blue-500 to-indigo-500 rounded-l-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>

                <div class="relative">
                  <div class="flex flex-wrap gap-4 items-center mb-4">
                    <time class="text-sm text-white/40">November 2024</time>
                    <div class="flex gap-2">
                      <span class="px-2 py-1 rounded-md bg-white/5 text-white/50 text-xs">Productivity</span>
                    </div>
                  </div>

                  <h2 class="text-2xl font-bold text-white mb-3 group-hover:text-blue-400 transition-colors">
                    Meine Gedanken zu Deep Work
                  </h2>

                  <p class="text-white/50 leading-relaxed mb-4">
                    Wie ich versuche, fokussierter zu arbeiten und was mir dabei hilft,
                    Ablenkungen zu minimieren.
                  </p>

                  <span class="inline-flex items-center gap-2 text-blue-400 text-sm font-medium group-hover:gap-3 transition-all">
                    Weiterlesen
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          </article>

          <!-- Empty state hint -->
          <div class="opacity-0 animate-fade-in-up animation-delay-300">
            <div class="glass-card p-8 text-center border-dashed border-white/20">
              <div class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <p class="text-white/50">
                Schreibe deinen ersten Post in <code class="bg-white/10 px-2 py-1 rounded text-sm">src/content/blog/</code>
              </p>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="glass-card p-12 md:p-16 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-rose-500/10 via-transparent to-primary-500/10"></div>
        <div class="absolute top-0 right-0 w-64 h-64 bg-rose-500/10 rounded-full blur-3xl"></div>

        <div class="relative grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold mb-4">
              Bleib auf dem Laufenden
            </h2>
            <p class="text-white/60">
              Erhalte Updates zu neuen Blog-Posts und Projekten direkt in dein Postfach.
              Kein Spam, versprochen.
            </p>
          </div>
          <div>
            <form class="flex flex-col sm:flex-row gap-4">
              <input
                type="email"
                placeholder="deine@email.de"
                class="flex-1 px-6 py-4 bg-white/5 border border-white/10 rounded-xl text-white placeholder:text-white/30 focus:outline-none focus:border-primary-500/50 transition-colors"
              />
              <button
                type="submit"
                class="px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-600 text-neutral-900 rounded-xl font-semibold hover:scale-105 transition-transform whitespace-nowrap"
              >
                Abonnieren
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
