---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Lebenslauf" description="Mein beruflicher Werdegang und Skills">
  <!-- Header Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="max-w-6xl mx-auto px-6 relative">
      <div class="flex flex-col md:flex-row gap-8 items-start md:items-center">
        <div class="w-24 h-24 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-4xl font-bold text-neutral-900 shrink-0">
          BR
        </div>
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-3 opacity-0 animate-fade-in-up">
            <span class="text-gradient">Lebenslauf</span>
          </h1>
          <p class="text-xl text-white/60 opacity-0 animate-fade-in-up animation-delay-100">
            AI Enthusiast & Business Strategist | Bridging Sales, Marketing, and AI-Driven Solutions
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex items-center gap-4 mb-12 opacity-0 animate-fade-in-up animation-delay-200">
        <div class="w-12 h-12 rounded-xl bg-primary-500/20 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h2 class="text-3xl font-bold">Berufserfahrung</h2>
      </div>

      <!-- Timeline -->
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-8 top-0 bottom-0 w-px bg-gradient-to-b from-primary-500 via-primary-600 to-transparent hidden md:block"></div>

        <div class="space-y-8">
          <!-- PferdeWert.de -->
          <div class="relative opacity-0 animate-fade-in-up animation-delay-300">
            <div class="md:ml-20 glass-card p-8 hover-lift group">
              <!-- Timeline dot with logo -->
              <div class="absolute left-3 top-8 w-12 h-12 rounded-full bg-white border-4 border-neutral-950 hidden md:flex items-center justify-center group-hover:scale-110 transition-transform overflow-hidden">
                <img src="/logos/pferdewert.png" alt="PferdeWert.de" class="w-8 h-8 object-contain" />
              </div>

              <div class="flex flex-wrap gap-4 justify-between items-start mb-4">
                <div class="flex items-start gap-4">
                  <img src="/logos/pferdewert.png" alt="PferdeWert.de" class="w-12 h-12 rounded-lg object-contain bg-white p-1 md:hidden" />
                  <div>
                    <span class="inline-block px-3 py-1 rounded-full bg-primary-500/20 text-primary text-sm font-medium mb-3">
                      Aug. 2025 - Heute
                    </span>
                    <h3 class="text-2xl font-bold text-white group-hover:text-primary transition-colors">
                      Co-Founder
                    </h3>
                    <p class="text-white/60 mt-1">PferdeWert · Selbstständig</p>
                    <p class="text-white/40 text-sm mt-1">Stuttgart</p>
                  </div>
                </div>
                <div class="px-4 py-2 rounded-lg bg-green-500/10 text-green-400 text-sm font-medium">
                  Aktuell
                </div>
              </div>
              <p class="text-white/50 leading-relaxed">
                Side-Project mit meiner Frau: Vibe-Coding einer KI-Plattform für Pferdebewertungen.
                Ob Kauf, Verkauf oder einfach nur neugierig auf den Marktwert - pferdewert.de
              </p>
              <div class="flex flex-wrap gap-2 mt-6">
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">AI</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Startup</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Vibe-Coding</span>
              </div>
            </div>
          </div>

          <!-- Bosch Power Tools - Strategic Partner Manager -->
          <div class="relative opacity-0 animate-fade-in-up animation-delay-400">
            <div class="md:ml-20 glass-card p-8 hover-lift group">
              <div class="absolute left-3 top-8 w-12 h-12 rounded-full bg-white border-4 border-neutral-950 hidden md:flex items-center justify-center group-hover:scale-110 transition-transform overflow-hidden">
                <img src="/logos/bosch.png" alt="Bosch" class="w-8 h-8 object-contain" />
              </div>

              <div class="flex flex-wrap gap-4 justify-between items-start mb-4">
                <div class="flex items-start gap-4">
                  <img src="/logos/bosch.png" alt="Bosch" class="w-12 h-12 rounded-lg object-contain bg-white p-1 md:hidden" />
                  <div>
                    <span class="inline-block px-3 py-1 rounded-full bg-primary-500/20 text-primary text-sm font-medium mb-3">
                      Apr. 2025 - Heute
                    </span>
                    <h3 class="text-2xl font-bold text-white group-hover:text-primary transition-colors">
                      Strategic Partner Manager Digital Solutions
                    </h3>
                    <p class="text-white/60 mt-1">Bosch Power Tools</p>
                    <p class="text-white/40 text-sm mt-1">Stuttgart</p>
                  </div>
                </div>
                <div class="px-4 py-2 rounded-lg bg-green-500/10 text-green-400 text-sm font-medium">
                  Aktuell
                </div>
              </div>
              <div class="flex flex-wrap gap-2 mt-4">
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">SEO</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Künstliche Intelligenz</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Digital Solutions</span>
              </div>
            </div>
          </div>

          <!-- Bosch Power Tools - Sales Lead -->
          <div class="relative opacity-0 animate-fade-in-up animation-delay-500">
            <div class="md:ml-20 glass-card p-8 hover-lift group">
              <div class="absolute left-3 top-8 w-12 h-12 rounded-full bg-white border-4 border-neutral-950 hidden md:flex items-center justify-center group-hover:scale-110 transition-transform overflow-hidden">
                <img src="/logos/bosch.png" alt="Bosch" class="w-8 h-8 object-contain" />
              </div>

              <div class="flex flex-wrap gap-4 justify-between items-start mb-4">
                <div class="flex items-start gap-4">
                  <img src="/logos/bosch.png" alt="Bosch" class="w-12 h-12 rounded-lg object-contain bg-white p-1 md:hidden" />
                  <div>
                    <span class="inline-block px-3 py-1 rounded-full bg-primary-600/20 text-primary text-sm font-medium mb-3">
                      Juni 2022 - Apr. 2025
                    </span>
                    <h3 class="text-2xl font-bold text-white group-hover:text-primary transition-colors">
                      Sales Lead Digital Solutions
                    </h3>
                    <p class="text-white/60 mt-1">Bosch Power Tools</p>
