                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Industry 4.0</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">EMEA</span>
              </div>
            </div>
          </div>

          <!-- adesso -->
          <div class="relative opacity-0 animate-fade-in-up">
            <div class="md:ml-20 glass-card p-8 hover-lift group">
              <div class="absolute left-3 top-8 w-12 h-12 rounded-full bg-white border-4 border-neutral-950 hidden md:flex items-center justify-center group-hover:scale-110 transition-transform overflow-hidden">
                <img src="/logos/adesso.png" alt="adesso" class="w-8 h-8 object-contain" />
              </div>

              <div class="flex flex-wrap gap-4 justify-between items-start mb-4">
                <div class="flex items-start gap-4">
                  <img src="/logos/adesso.png" alt="adesso" class="w-12 h-12 rounded-lg object-contain bg-white p-1 md:hidden" />
                  <div>
                    <span class="inline-block px-3 py-1 rounded-full bg-blue-500/20 text-blue-400 text-sm font-medium mb-3">
                      Juli 2014 - Juni 2018
                    </span>
                    <h3 class="text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
                      Account Manager
                    </h3>
                    <p class="text-white/60 mt-1">adesso SE</p>
                    <p class="text-white/40 text-sm mt-1">Stuttgart</p>
                  </div>
                </div>
              </div>
              <p class="text-white/50 leading-relaxed">
                Software Development und IT-Consulting
              </p>
              <div class="flex flex-wrap gap-2 mt-4">
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">IT-Consulting</span>
                <span class="px-3 py-1 rounded-lg bg-white/5 text-white/60 text-sm border border-white/10">Software Development</span>
              </div>
            </div>
          </div>

          <!-- TQG -->
          <div class="relative opacity-0 animate-fade-in-up">
            <div class="md:ml-20 glass-card p-8 hover-lift group">
              <div class="absolute left-3 top-8 w-12 h-12 rounded-full bg-white border-4 border-neutral-950 hidden md:flex items-center justify-center group-hover:scale-110 transition-transform overflow-hidden">
                <img src="/logos/tqg.png" alt="TQG" class="w-8 h-8 object-contain" />
              </div>

              <div class="flex flex-wrap gap-4 justify-between items-start mb-4">
                <div class="flex items-start gap-4">
                  <img src="/logos/tqg.png" alt="TQG" class="w-12 h-12 rounded-lg object-contain bg-white p-1 md:hidden" />
                  <div>
                    <span class="inline-block px-3 py-1 rounded-full bg-purple-500/20 text-purple-400 text-sm font-medium mb-3">
                      Jan. 2013 - Juni 2014
                    </span>
                    <h3 class="text-2xl font-bold text-white group-hover:text-purple-400 transition-colors">
                      Account Manager
                    </h3>
