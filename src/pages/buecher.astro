---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const books = await getCollection('books');
---

<BaseLayout title="Bücher" description="Bücher die ich lese und empfehle">
  <!-- Header Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-green-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 w-64 h-64 bg-amber-500/10 rounded-full blur-3xl"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 mb-6 opacity-0 animate-fade-in-up">
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span class="text-green-400 text-sm font-medium">Leseliste</span>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold mb-6 opacity-0 animate-fade-in-up animation-delay-100">
          Meine <span class="gradient-text">Bücher</span>
        </h1>
        <p class="text-xl text-white/60 opacity-0 animate-fade-in-up animation-delay-200">
          Bücher, die mich inspiriert, weitergebracht oder einfach gut unterhalten haben.
          Meine persönlichen Empfehlungen.
        </p>
      </div>
    </div>
  </section>

  <!-- Books Grid -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6">
      {books.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {books.map((book, index) => (
            <div class={`group opacity-0 animate-fade-in-up animation-delay-${(index % 3 + 1) * 100}`}>
              <div class="glass-card p-6 h-full hover-lift relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                <div class="relative">
                  <!-- Book cover placeholder -->
                  <div class="w-full aspect-[3/4] rounded-xl bg-gradient-to-br from-white/10 to-white/5 flex items-center justify-center mb-6 group-hover:scale-[1.02] transition-transform duration-300 overflow-hidden">
                    <div class="text-center p-4">
                      <svg class="w-12 h-12 text-green-400/30 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                      </svg>
                      <p class="text-white/20 text-xs">Cover</p>
                    </div>
                  </div>

                  <h3 class="text-lg font-bold text-white mb-1 group-hover:text-green-400 transition-colors line-clamp-2">
                    {book.data.title}
                  </h3>
                  <p class="text-white/50 text-sm mb-3">{book.data.author}</p>

                  {book.data.rating && (
                    <div class="flex items-center gap-1 mb-3">
                      {[...Array(5)].map((_, i) => (
                        <svg class={`w-4 h-4 ${i < book.data.rating ? 'text-amber-400' : 'text-white/20'}`} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                  )}

                  {book.data.note && (
                    <p class="text-white/40 text-sm leading-relaxed line-clamp-3">
                      {book.data.note}
                    </p>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Sample Book 1 -->
          <div class="group opacity-0 animate-fade-in-up animation-delay-100">
            <div class="glass-card p-6 h-full hover-lift relative overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <div class="relative">
                <div class="w-full aspect-[3/4] rounded-xl bg-gradient-to-br from-amber-500/20 to-orange-500/20 flex items-center justify-center mb-6 group-hover:scale-[1.02] transition-transform duration-300">
                  <svg class="w-16 h-16 text-amber-400/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>

                <h3 class="text-lg font-bold text-white mb-1 group-hover:text-green-400 transition-colors">
                  Atomic Habits
                </h3>
                <p class="text-white/50 text-sm mb-3">James Clear</p>

                <div class="flex items-center gap-1 mb-3">
                  {[...Array(5)].map(() => (
                    <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                <p class="text-white/40 text-sm leading-relaxed">
                  Ein Game-Changer für Gewohnheiten. Praktische Tipps, die wirklich funktionieren.
                </p>
              </div>
            </div>
          </div>

          <!-- Sample Book 2 -->
          <div class="group opacity-0 animate-fade-in-up animation-delay-200">
            <div class="glass-card p-6 h-full hover-lift relative overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-indigo-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <div class="relative">
                <div class="w-full aspect-[3/4] rounded-xl bg-gradient-to-br from-blue-500/20 to-indigo-500/20 flex items-center justify-center mb-6 group-hover:scale-[1.02] transition-transform duration-300">
                  <svg class="w-16 h-16 text-blue-400/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>

                <h3 class="text-lg font-bold text-white mb-1 group-hover:text-blue-400 transition-colors">
                  Deep Work
                </h3>
                <p class="text-white/50 text-sm mb-3">Cal Newport</p>

                <div class="flex items-center gap-1 mb-3">
                  {[...Array(5)].map((_, i) => (
                    <svg class={`w-4 h-4 ${i < 4 ? 'text-amber-400' : 'text-white/20'}`} fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>

                <p class="text-white/40 text-sm leading-relaxed">
                  Wie man in einer abgelenkten Welt fokussiert arbeitet.
                </p>
              </div>
            </div>
          </div>

          <!-- Empty state card -->
          <div class="group opacity-0 animate-fade-in-up animation-delay-300">
            <div class="glass-card p-6 h-full hover-lift relative overflow-hidden border-dashed border-white/20">
              <div class="relative flex flex-col items-center justify-center h-full min-h-[300px] text-center">
                <div class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center mb-4">
                  <svg class="w-8 h-8 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white/50 mb-2">
                  Mehr Bücher
                </h3>
                <p class="text-white/30 text-sm">
                  Füge Bücher in<br>
                  <code class="bg-white/10 px-2 py-0.5 rounded text-xs">src/content/books/</code><br>
                  hinzu
                </p>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Reading Stats -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="glass-card p-8 md:p-12">
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div class="opacity-0 animate-fade-in-up animation-delay-100">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">12+</div>
            <p class="text-white/50">Bücher dieses Jahr</p>
          </div>
          <div class="opacity-0 animate-fade-in-up animation-delay-200">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">5</div>
            <p class="text-white/50">Gerade am Lesen</p>
          </div>
          <div class="opacity-0 animate-fade-in-up animation-delay-300">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">50+</div>
            <p class="text-white/50">Insgesamt gelesen</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recommendation CTA -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="glass-card p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 via-transparent to-emerald-500/10"></div>
        <div class="relative">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">
            Hast du eine Buchempfehlung?
          </h2>
          <p class="text-white/60 max-w-xl mx-auto mb-8">
            Ich bin immer auf der Suche nach neuen Leseempfehlungen. Schreib mir gerne!
          </p>
          <a href="mailto:hello@benjaminreder.de" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-500 text-neutral-900 rounded-xl font-semibold hover:scale-105 transition-transform">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Empfehlung schicken
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
