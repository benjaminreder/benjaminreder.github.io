---
import BaseLayout from '../layouts/BaseLayout.astro';

// Bücher nach Kategorien
const categories = [
  {
    title: "Persönlichkeitsentwicklung & Sinn",
    icon: "compass",
    color: "amber",
    books: [
      { title: "Das Café am Rande der Welt / The Big Five for Life", author: "John Strelecky", rating: 5, isDouble: true },
      { title: "The Happiness Project", author: "Gretchen Rubin", rating: 5 },
      { title: "EQ - Emotionale Intelligenz", author: "Daniel Goleman", rating: 5 },
      { title: "How to Win Friends & Influence People", author: "Dale Carnegie", rating: 4 },
      { title: "Der Alchimist", author: "Paulo Coelho", rating: 3 },
    ]
  },
  {
    title: "Business & Karriere",
    icon: "briefcase",
    color: "blue",
    books: [
      { title: "Trillion Dollar Coach", author: "Eric Schmidt", rating: 5 },
      { title: "Crossing the Chasm", author: "Geoffrey A. Moore", rating: 5 },
      { title: "Good to Great", author: "Jim Collins", rating: 4 },
      { title: "Platform Revolution", author: "Geoffrey G. Parker", rating: 4 },
      { title: "The Squiggly Career", author: "Helen Tupper", rating: 4 },
    ]
  },
  {
    title: "Biografien & Erfolgsgeschichten",
    icon: "user",
    color: "purple",
    books: [
      { title: "Elon Musk", author: "Ashlee Vance", rating: 5 },
      { title: "Warren Buffett: Das Leben ist wie ein Schneeball", author: "Alice Schroeder", rating: 5 },
      { title: "Open", author: "Andre Agassi", rating: 5 },
      { title: "Becoming", author: "Michelle Obama", rating: 4 },
      { title: "The Everything Store (Jeff Bezos)", author: "Brad Stone", rating: 4 },
    ]
  },
  {
    title: "Finanzen & Investieren",
    icon: "chart",
    color: "green",
    books: [
      { title: "The Big Short", author: "Michael Lewis", rating: 5 },
      { title: "Rich Dad, Poor Dad", author: "Robert Kiyosaki", rating: 5 },
      { title: "The Psychology of Money", author: "Morgan Housel", rating: 4 },
      { title: "The Intelligent Investor", author: "Benjamin Graham", rating: 4 },
      { title: "Souverän investieren mit ETFs", author: "Gerd Kommer", rating: 4 },
    ]
  },
  {
    title: "Fantasy & Science Fiction",
    icon: "sparkles",
    color: "indigo",
    books: [
      { title: "The Way of Kings (Stormlight Archive)", author: "Brandon Sanderson", rating: 5 },
      { title: "Mistborn: The Final Empire", author: "Brandon Sanderson", rating: 5 },
      { title: "The Black Prism (Lightbringer)", author: "Brent Weeks", rating: 5 },
      { title: "The Warded Man (Demon Cycle)", author: "Peter V. Brett", rating: 5 },
      { title: "A Game of Thrones", author: "George R.R. Martin", rating: 5 },
    ]
  },
  {
    title: "Thriller & Krimis",
    icon: "fire",
    color: "red",
    books: [
      { title: "Messer (Harry Hole)", author: "Jo Nesbø", rating: 5 },
      { title: "Durst (Harry Hole)", author: "Jo Nesbø", rating: 5 },
      { title: "The Girl on the Train", author: "Paula Hawkins", rating: 5 },
      { title: "Gone Girl", author: "Gillian Flynn", rating: 5 },
      { title: "The Girl With the Dragon Tattoo", author: "Stieg Larsson", rating: 5 },
    ]
  },
  {
    title: "Familie & Erziehung",
    icon: "heart",
    color: "pink",
    books: [
      { title: "Working Dad", author: "Roman Gaida", rating: 5 },
      { title: "Babybauchzeit", author: "Nora Imlau", rating: 5 },
      { title: "Das gewünschteste Wunschkind aller Zeiten", author: "Danielle Graf", rating: 5 },
      { title: "artgerecht - Das andere Baby-Buch", author: "Nicola Schmidt", rating: 5 },
      { title: "Dreißig Minuten, dann ist aber Schluss!", author: "Patricia Cammarata", rating: 5 },
    ]
  },
  {
    title: "Historische Romane & Klassiker",
    icon: "book",
    color: "stone",
    books: [
      { title: "Der Name der Rose", author: "Umberto Eco", rating: 5 },
      { title: "Gladiator (Rom-Serie)", author: "Simon Scarrow", rating: 5 },
      { title: "Der Spieler", author: "Fjodor Dostojewski", rating: 5 },
      { title: "Acht Berge", author: "Paolo Cognetti", rating: 5 },
      { title: "Die Räuber", author: "Friedrich Schiller", rating: 4 },
    ]
  },
];

const icons = {
  compass: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />`,
  briefcase: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  user: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />`,
  chart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />`,
  sparkles: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />`,
  fire: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />`,
  heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`,
};

const colorClasses = {
  amber: { bg: "from-amber-500/20 to-orange-500/20", text: "text-amber-400", border: "border-amber-500/30" },
  blue: { bg: "from-blue-500/20 to-cyan-500/20", text: "text-blue-400", border: "border-blue-500/30" },
  purple: { bg: "from-purple-500/20 to-pink-500/20", text: "text-purple-400", border: "border-purple-500/30" },
  green: { bg: "from-green-500/20 to-emerald-500/20", text: "text-green-400", border: "border-green-500/30" },
  indigo: { bg: "from-indigo-500/20 to-violet-500/20", text: "text-indigo-400", border: "border-indigo-500/30" },
  red: { bg: "from-red-500/20 to-rose-500/20", text: "text-red-400", border: "border-red-500/30" },
  pink: { bg: "from-pink-500/20 to-rose-500/20", text: "text-pink-400", border: "border-pink-500/30" },
  stone: { bg: "from-stone-500/20 to-neutral-500/20", text: "text-stone-400", border: "border-stone-500/30" },
};
---

<BaseLayout title="Bücher" description="Bücher die ich lese und empfehle - sortiert nach Kategorien">
  <!-- Header Section -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-green-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-1/4 w-64 h-64 bg-amber-500/10 rounded-full blur-3xl"></div>

    <div class="max-w-6xl mx-auto px-6 relative">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 mb-6 opacity-0 animate-fade-in-up">
          <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <span class="text-green-400 text-sm font-medium">115+ Bücher gelesen</span>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold mb-6 opacity-0 animate-fade-in-up animation-delay-100">
          Meine <span class="gradient-text">Bibliothek</span>
        </h1>
        <p class="text-xl text-white/60 opacity-0 animate-fade-in-up animation-delay-200">
          Bücher, die mich inspiriert, weitergebracht oder einfach gut unterhalten haben.
          Sortiert nach Themengebieten.
        </p>
      </div>
    </div>
  </section>

  <!-- Category Navigation -->
  <section class="py-4 sticky top-0 z-20 bg-neutral-950/80 backdrop-blur-lg border-b border-white/5">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
        {categories.map((cat) => (
          <a href={`#${cat.title.toLowerCase().replace(/[^a-z0-9]/g, '-')}`}
             class={`flex-shrink-0 px-4 py-2 rounded-full text-sm font-medium border ${colorClasses[cat.color].border} ${colorClasses[cat.color].text} hover:bg-white/5 transition-colors`}>
            {cat.title.split(' ')[0]}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Books by Category -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-6 space-y-20">
      {categories.map((category, catIndex) => (
        <div id={category.title.toLowerCase().replace(/[^a-z0-9]/g, '-')} class="scroll-mt-24">
          <!-- Category Header -->
          <div class="flex items-center gap-4 mb-8">
            <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${colorClasses[category.color].bg} flex items-center justify-center`}>
              <svg class={`w-6 h-6 ${colorClasses[category.color].text}`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[category.icon]} />
            </div>
            <div>
              <h2 class="text-2xl md:text-3xl font-bold text-white">{category.title}</h2>
              <p class="text-white/40 text-sm">{category.books.length} Bücher</p>
            </div>
          </div>

          <!-- Books Grid -->
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
            {category.books.map((book, bookIndex) => (
              <div class={`group opacity-0 animate-fade-in-up ${book.isDouble ? 'sm:col-span-2 lg:col-span-1' : ''}`} style={`animation-delay: ${(catIndex * 100) + (bookIndex * 50)}ms`}>
                <div class={`glass-card p-4 h-full hover-lift relative overflow-hidden ${book.isDouble ? 'ring-2 ring-amber-500/30' : ''}`}>
                  <div class={`absolute inset-0 bg-gradient-to-br ${colorClasses[category.color].bg} opacity-0 group-hover:opacity-30 transition-opacity duration-500`}></div>

                  <div class="relative">
                    <!-- Mini Book Cover -->
                    <div class={`w-full aspect-[3/4] rounded-lg bg-gradient-to-br ${colorClasses[category.color].bg} flex items-center justify-center mb-4 group-hover:scale-[1.02] transition-transform duration-300`}>
                      {book.isDouble ? (
                        <div class="flex gap-1">
                          <svg class={`w-6 h-6 ${colorClasses[category.color].text} opacity-50`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                          </svg>
                          <svg class={`w-6 h-6 ${colorClasses[category.color].text} opacity-50`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                          </svg>
                        </div>
                      ) : (
                        <svg class={`w-8 h-8 ${colorClasses[category.color].text} opacity-50`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                      )}
                    </div>

                    <h3 class={`text-sm font-bold text-white mb-1 group-hover:${colorClasses[category.color].text} transition-colors line-clamp-2`}>
                      {book.title}
                    </h3>
                    <p class="text-white/50 text-xs mb-2">{book.author}</p>

                    <!-- Rating -->
                    <div class="flex items-center gap-0.5">
                      {[...Array(5)].map((_, i) => (
                        <svg class={`w-3 h-3 ${i < book.rating ? 'text-amber-400' : 'text-white/20'}`} fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Reading Stats -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="glass-card p-8 md:p-12">
        <div class="grid md:grid-cols-4 gap-8 text-center">
          <div class="opacity-0 animate-fade-in-up animation-delay-100">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">115+</div>
            <p class="text-white/50">Bücher gelesen</p>
          </div>
          <div class="opacity-0 animate-fade-in-up animation-delay-200">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">8</div>
            <p class="text-white/50">Kategorien</p>
          </div>
          <div class="opacity-0 animate-fade-in-up animation-delay-300">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">4.3</div>
            <p class="text-white/50">Durchschnittliche Bewertung</p>
          </div>
          <div class="opacity-0 animate-fade-in-up animation-delay-400">
            <div class="text-4xl md:text-5xl font-bold gradient-text mb-2">31</div>
            <p class="text-white/50">Auf der Leseliste</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recommendation CTA -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6">
      <div class="glass-card p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-green-500/10 via-transparent to-emerald-500/10"></div>
        <div class="relative">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">
            Hast du eine Buchempfehlung?
          </h2>
          <p class="text-white/60 max-w-xl mx-auto mb-8">
            Ich bin immer auf der Suche nach neuen Leseempfehlungen. Schreib mir gerne!
          </p>
          <a href="mailto:hi@benjaminreder.de" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-green-500 to-emerald-500 text-neutral-900 rounded-xl font-semibold hover:scale-105 transition-transform">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Empfehlung schicken
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</BaseLayout>
